{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug index.ts",
      "runtimeArgs": [
        "--experimental-specifier-resolution=node",
        "--import",
        "./register.js"
      ],
      "cwd": "${workspaceFolder}",
      "args": ["./index.ts"],
      "internalConsoleOptions": "openOnSessionStart",
      // 如果想使用 vscode 内置 console ，删去这行即可
      "console": "externalTerminal"
    }
  ]
}
